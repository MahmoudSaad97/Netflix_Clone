@model MovieApp.Models.Payment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/AdminPanel/_AdminPanelLayout.cshtml";
}

<h3>Are you sure you want to delete this payment?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Payment Method
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod)
        </dd>
        <dt class = "col-sm-2">
            CreditCard Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreditNumber)
        </dd>
        <dt class = "col-sm-2">
            Payment Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentDate)
        </dd>
        <dt class = "col-sm-2">
            User Fullname
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="User" asp-action="Details" asp-route-id="@Model.UserID">
                @Html.DisplayFor(model => model.User.fname) @Html.DisplayFor(model => model.User.lname)
            </a>
        </dd>
        <dt class="col-sm-2">
            User Email
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="User" asp-action="Details" asp-route-id="@Model.UserID">
                @Html.DisplayFor(model => model.User.Email)
            </a>
        </dd>
        <dt class="col-sm-2">
            Subscription
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscribe.Role.Name) - @Html.DisplayFor(model => model.Subscribe.Price)$
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PaymentID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back</a>
    </form>
</div>
