@model MovieApp.Models.Subscribe

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/AdminPanel/_AdminPanelLayout.cshtml";
}

<h3>Are you sure you want to delete this subscription?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Duration
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DurationDays) Days
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)$
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SubscribeID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back</a>
    </form>
</div>
