@model MovieApp.Models.Actor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/AdminPanel/_AdminPanelLayout.cshtml";
}

<h3>Are you sure you want to delete this Actor?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Actor Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ActorID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back</a>
    </form>
</div>
