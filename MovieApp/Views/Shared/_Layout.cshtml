<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" />
    @await RenderSectionAsync("Css", required: false)

    <script>
        window.addEventListener('load', function () {
            var x = "/Main/Index/" + sessionStorage.getItem("ProfileId");
            document.getElementById("hamada").setAttribute("href", x);
            document.getElementById("hamada2").setAttribute("href", x);
        });
    </script>
</head>
<body class="bg-black">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid" style="padding-bottom: 0px;">
                <a class="navbar-brand" id="hamada">MovieApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item mynav">
                            <a id="hamada2" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item mynav">
                            <a class="nav-link" asp-area="" asp-route-id="@ViewBag.profileID" asp-controller="Main" asp-action="TvShows">TV Shows</a>
                        </li>
                        <li class="nav-item mynav">
                            <a class="nav-link" asp-area="" asp-route-id="@ViewBag.profileID" asp-controller="Main" asp-action="Movies">Movies</a>
                        </li>
                        <li class="nav-item mynav">
                            <a class="nav-link" asp-area="" asp-route-id="@ViewBag.profileID" asp-controller="Main" asp-action="NewAndPopular" asp-route-t="both" asp-route-category="all">New & Popular</a>
                        </li>
                        <li class="nav-item mynav">
                            <a class="nav-link" asp-area="" asp-route-id="@ViewBag.profileID" asp-controller="Main" asp-action="MyList">My List</a>
                        </li>
@*                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="search text-end">
                                <form asp-controller="Main" asp-route-id="@ViewBag.profileID" asp-action="S" asp-route-t="@ViewBag.type" id="searchForm">
                                    <div class="input-group">
                                        <i class="bi bi-search input-group-text w-25 d-none d-md-inline"></i>
                                        <input class="form-control" type="text" name="searchName" placeholder="Search" id="searchName" />
                                    </div>
                                </form>
                                <div class="position-relative">
                                    <div id="searchResults" class="d-none bg-dark"></div>
                                </div>
                            </div>
                        </li>
                        <Partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MovieApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        window.addEventListener('load', function(){
            document.querySelectorAll(".mynav").forEach((element) => {
                element.querySelectorAll(".nav-link").forEach((link) => {
                    if (link.href === window.location.href) {
                        link.classList.add("text-warning");
                        link.setAttribute("aria-current", "page");
                    }
                    else {
                        link.classList.remove("text-warning");
                    }
                });
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")

</body>
</html>
