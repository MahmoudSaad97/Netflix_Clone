@model MovieApp.Models.Genrie

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/AdminPanel/_AdminPanelLayout.cshtml";
}

<h3>Are you sure you want to delete this Genrie?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Genrie Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GenrieName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GenrieID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back</a>
    </form>
</div>
